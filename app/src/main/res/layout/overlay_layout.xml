<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#CC000000"
    android:padding="12dp"
    android:minWidth="200dp">

    <TextView
        android:id="@+id/overlay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ESP Menu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/overlay_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Running"
        android:textSize="12sp"
        android:textColor="@android:color/holo_green_light"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/overlay_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Players: 0"
        android:textSize="12sp"
        android:textColor="@android:color/holo_blue_light"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/overlay_fps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FPS: 0"
        android:textSize="12sp"
        android:textColor="@android:color/holo_orange_light"
        android:paddingTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/overlay_stop_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop"
            android:textSize="10sp"
            android:padding="4dp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/overlay_hide_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hide"
            android:textSize="10sp"
            android:padding="4dp"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</LinearLayout>
